<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#65A1FC">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_back_white"
            android:drawablePadding="15px"
            android:paddingLeft="24px"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/ll_album_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="所有照片"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:src="@mipmap/ic_gfq_xiala" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:background="#65A1FC"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_space_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffffff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_photos_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂无照片"
        android:textColor="#cccccc"
        android:textSize="15dp" />
</LinearLayout>
